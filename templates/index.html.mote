% if errors.show?
  <div class="errors">
    {{ errors }}
  </div>
% end

<ul class="todos">
  % todos.each do |todo|
    <li>{{ todo.title }}</li>
  % end
</ul>

<form method="post" action="/todos">
  <label for="title">Title</label>
  <input type="text" name="title">
  <input type="submit" value="Create" id="create">
</form>
